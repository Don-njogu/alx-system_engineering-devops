#!/bin/bash

# Get the current working directory
current_dir=$(pwd)

# Get the parent of the working directory
parent_dir=$(dirname "$current_dir")

# Find all HTML files in the current working directory
for file in "$current_dir"/*.html; do
	  # Get the filename
	    filename=$(basename "$file")
	      
	      # Check if the file exists in the parent directory
	        if [ -f "$parent_dir/$filename" ]; then
			    # Check if the file in the current working directory is newer than the version in the parent directory
			        if [ "$file" -nt "$parent_dir/$filename" ]; then
					      # Copy the file from the current working directory to the parent directory
					            cp "$file" "$parent_dir/$filename"
						          echo "Copied $file to $parent_dir/$filename"
							      fi
							        else
									    # Copy the file from the current working directory to the parent directory
									        cp "$file" "$parent_dir/$filename"
										    echo "Copied $file to $parent_dir/$filename"
										      fi
									      done
